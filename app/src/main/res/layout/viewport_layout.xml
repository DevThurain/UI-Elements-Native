<?xml version="1.0" encoding="utf-8"?>
<com.thurainx.commonui.viewports.CustomViewPort xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3F51B5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivDummy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/merry_jane" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/ivDummy"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Merry Jane"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_alignStart="@id/tvName"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:text="PADC"
        android:textSize="16sp" />
</com.thurainx.commonui.viewports.CustomViewPort>